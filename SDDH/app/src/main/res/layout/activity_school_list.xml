<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--검색 결과화면에서 학교 이미지 클릭시 나오는 화면의
    하단 부분-->
    <com.google.android.gms.maps.MapView
        android:id="@+id/school_map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소장위치:"
                android:textSize="14sp"
                android:id="@+id/label_book_location"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록번호:"
                android:textSize="14sp"
                android:id="@+id/label_book_info"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="청구기호:"
                android:textSize="14sp"
                android:id="@+id/label_book_cn"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대출여부:"
                android:textSize="14sp"
                android:id="@+id/label_borrow_school_able"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반납예정일:"
                android:textSize="14sp"
                android:id="@+id/label_return_date"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약자수:"
                android:textSize="14sp"
                android:id="@+id/label_book_reserve"
                android:textColor="@color/activity_school_textColor">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[소장위치]"
                android:id="@+id/book_location"
                android:textSize="14sp"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[등록번호]"
                android:id="@+id/book_info"
                android:textSize="14sp"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[청구기호]"
                android:id="@+id/book_cn"
                android:textSize="14sp"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[대출여부]"
                android:id="@+id/borrow_school_able"
                android:textSize="14sp"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[반납예정일]"
                android:id="@+id/return_date"
                android:textSize="14sp"
                android:textColor="@color/activity_school_textColor">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[예약자수]"
                android:id="@+id/book_reserve"
                android:textSize="14sp"
                android:textColor="@color/activity_school_textColor">
            </TextView>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>